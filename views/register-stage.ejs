    <div class="container">
      <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <input class="form-control form-control-dark w-100" type="text" placeholder="Pesquisar" aria-label="Search">
        <div class="navbar-nav px-5"></div>
      </header>
      <main>
          <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block d-flex flex-column p-3 text-white bg-dark sidebar collapse" style="width: 228px;">
              <a href="#" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <img
                  src="./images/logo-white2.png" width=30px height=25px alt="House Flix Logo"
                  style="margin-right: 10px; align-self: center"
                />
                <span class="fs-4">houseflix</span>
              </a>
              <hr>
              <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                  <a href="/dashboard" class="nav-link text-white mb-1">
                    <svg data-feather="layout"></svg>
                    Dashboard
                  </a>
                </li>
                <li>
                  <a href="/custumer" class="nav-link text-white mb-1">
                    <svg data-feather="user"></svg>
                    Cliente
                  </a>
                </li>
                <li>
                  <a href="/project" class="nav-link active mb-1" aria-current="page">
                    <svg data-feather="home"></svg>
                    Projeto
                  </a>
                </li>
              </ul>
              <div class="dropdown">
                <hr>
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                  <img src="https://github.com/jhsmiranda.png" alt="" width="32" height="32" class="rounded-circle me-2">
                  <strong>Henrique Miranda</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                  <li><a class="dropdown-item" href="#">Configurações</a></li>
                  <li><a class="dropdown-item" href="#">Perfil</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="/">Sair</a></li>
                </ul>
              </div>
            </nav>
            <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="position: absolute; left: 228px; top: 50px;">
              <div class="align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h4 class="h4">Cadastro de Etapa</h4>
              </div>   

              <form action="/stage" method="POST" class="needs-validation" novalidate>
                <div class="row g-3">
                  <div class="col-sm-6">
                    <label for="name" class="form-label">Nome da Etapa</label>
                    <input type="text" class="form-control" id="name" placeholder="Insira o nome da Etapa" value="" required>
                    <div class="invalid-feedback">
                      Este campo é obrigatório.
                    </div>
                  </div>
                  <div class="col-sm-2">
                    <label for="schedule_date" class="form-label">Previsão de Início</label>
                    <input type="date" class="form-control" id="schedule_date" value="" required>
                    <div class="invalid-feedback">
                      Este campo é obrigatório.
                    </div>
                  </div>
                  <div class="col-sm-2">
                    <label for="started_at" class="form-label">Data de Início</label>
                    <input type="date" class="form-control" id="started_at" value="" required>
                    <div class="invalid-feedback">
                      Este campo é obrigatório.
                    </div>
                  </div>
                  <div class="col-sm-2">
                    <label for="finished_at" class="form-label">Data de Término</label>
                    <input type="date" class="form-control" id="finished_at" value="" required>
                    <div class="invalid-feedback">
                      Este campo é obrigatório.
                    </div>
                  </div>
                  <div class="col-sm-12">
                    <label for="description" class="form-label">Descrição da Etapa</label>
                    <textarea class="form-control" id="description" placeholder="Insira a descrição da Etapa" value="" required></textarea>
                    <div class="invalid-feedback">
                      Este campo é obrigatório.
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <label for="status" class="form-label">Status</label>
                    <input type="text" class="form-control" id="status" placeholder="Insira o status" value="" required>
                    <div class="invalid-feedback">
                      Este campo é obrigatório.
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <label for="percentage" class="form-label">Porcentagem</label>
                    <input type="text" class="form-control" id="percentage" placeholder="Insira a porcentagem" value="" required>
                    <div class="invalid-feedback">
                      Este campo é obrigatório.
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <label for="atual_percentage" class="form-label">Atual Porcentagem</label>
                    <input type="text" class="form-control" id="atual_percentage" placeholder="Insira a atual porcentagem" value="" required>
                    <div class="invalid-feedback">
                      Este campo é obrigatório.
                    </div>
                  </div>

                  <hr class="my-4">

                  <button type="submit" class="btn btn-primary w-100" style="margin: 0px 0px 20px 0px;">Cadastrar Fase</button>
                </div>
              </form>
            </div>
          </div>
      </main>
    </div>

